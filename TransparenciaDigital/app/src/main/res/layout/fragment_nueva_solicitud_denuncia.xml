<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="transparencia.itai.com.transparenciadigital.NuevaSolicitudDenuncia">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sujeto Obligado" />

            <AutoCompleteTextView
                android:id="@+id/editSujetoO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:completionHint="Seleccionar el sujeto obligado"
                android:lines="1"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="Incumplimiento" />

            <EditText
                android:id="@+id/editDescripcionIncumplimiento"
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:ems="10"
                android:hint="DescripciÃ³n clara y precisa del incumplimiento denunciado"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/btnTerminarSolicitudDenuncia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar Solicitud" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
